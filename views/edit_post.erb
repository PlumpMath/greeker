<form action="<%= url %>" method="post" />
  <% if post.title %><input type="hidden" name="_method" value="put"/><% end %>

    <label for="post_title">Title</label><br />
    <input type="text" name="title" id="post_title" value="<%= post.title %>" /><br />

    <input type="checkbox" name="event" id="post_event" value="true" <%= 'checked' if post.event %> /> Event?<br />

    <label for="post_summary">Summary</label><br />
    <textarea name="summary" id="post_summary" class="wmd-ignore"><%= post.summary %></textarea><br />

    <label for="post_body">Text</label><br />
    <textarea name="body" id="post_body"><%= post.body %></textarea><br />

    <div class="wmd-preview">
    </div>

    <input type="submit" value="post" />
</form>

<script type="text/javascript" src="/javascript/wmd/wmd.js"></script>
